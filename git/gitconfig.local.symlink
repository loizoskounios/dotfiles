[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[commit]
	gpgSign = true
	template = "$HOME/.dotfiles/git/template.txt"

[core]
	excludesfile = "$HOME/.gitignore"
	editor = vim
	compression = -1
	autocrlf = input
	whitespace = trailing-space,space-before-tab
	precomposeUnicode = true

[grep]
	extendRegexp = true
	lineNumber = true

[log]
	showSignature = false

[submodule]
	fetchJobs = 4

